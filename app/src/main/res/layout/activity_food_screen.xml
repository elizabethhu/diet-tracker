<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inspiringfemgineers.www.diettracker.FoodScreen">



    <Button
        android:id="@+id/ingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ingredient"
        android:layout_below="@+id/enteringr"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enteringr"
        android:layout_alignStart="@+id/foodprompt"
        android:layout_below="@+id/ingprompt"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients(Add as many as you want):"
        android:id="@+id/ingprompt"
        android:layout_below="@+id/foodbutton"
        android:layout_centerHorizontal="true" />
        />
</RelativeLayout>
