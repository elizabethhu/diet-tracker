<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inspiringfemgineers.www.diettracker.FoodScreen"
    android:background="#858585">



    <Button
        android:id="@+id/ingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ingredient"
        android:textColor="#ffffff"
        android:background="#FF6600"
        android:layout_below="@+id/enteringr"
        android:paddingLeft="60dip"
        android:paddingRight="60dip"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendMessage"
        android:layout_marginTop="30dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enteringr"
        android:textColor="#ffffff"
        android:layout_below="@+id/ingprompt"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients(Add as many as you want):"
        android:textColor="#ffffff"
        android:id="@+id/ingprompt"
        android:layout_centerHorizontal="true" />
        />
</RelativeLayout>
